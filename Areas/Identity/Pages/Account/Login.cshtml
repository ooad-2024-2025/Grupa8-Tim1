@page
@model LoginModel

@{
    ViewData["Title"] = "Prijava";
}

<!-- stil za login -->

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: start;
        padding: 60px 20px;
        gap: 60px;
    }

    .login-form, .external-login {
        background: white;
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        width: 100%;
        max-width: 450px;
    }

        .login-form h2, .external-login h3 {
            font-weight: 700;
            margin-bottom: 25px;
            color: #1e3a8a;
        }

        .login-form .btn-primary {
            background-color: #2563eb;
            border: none;
            border-radius: 10px;
            padding: 12px;
            font-size: 1.1rem;
            box-shadow: 0 4px 10px rgba(37, 99, 235, 0.2);
        }

            .login-form .btn-primary:hover {
                background-color: #1d4ed8;
                transform: translateY(-1px);
            }

        .login-form a {
            display: block;
            margin-top: 10px;
            color: #1e3a8a;
            text-decoration: none;
        }

            .login-form a:hover {
                text-decoration: underline;
            }
</style>

<style>
    .login-title {
        text-align: center;
        font-size: 3rem;
        font-weight: 800;
        color: #1e3a8a;
        margin-top: 40px;
        margin-bottom: 30px;
        letter-spacing: -1px;
    }
</style>







<h1 class="login-title">@ViewData["Title"]</h1>

<div class="login-container">
    <div class="login-form">
        <form id="account" method="post">
            <h2>Koristite lokalni račun za prijavu.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="ime@primjer.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="lozinka" />
                <label asp-for="Input.Password">Šifra</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="checkbox mb-3">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Prijavi se</button>

            <a asp-page="./ForgotPassword">Zaboravili ste šifru?</a>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registruj se kao novi korisnik</a>
            <a asp-page="./ResendEmailConfirmation">Ponovo pošalji potvrdu email-a</a>
        </form>
    </div>

    <div class="external-login">
        <h3>Prijavi se putem druge usluge.</h3>
        <hr />
        @{
            if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <p>
                    Nema podešenih vanjskih autentifikacijskih servisa. Pogledajte ovaj
                    <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                        članak o tome kako podesiti ASP.NET aplikaciju za prijavu putem vanjskih servisa
                    </a>.
                </p>
            }
            else
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-outline-primary w-100 mb-2" name="provider" value="@provider.Name">
                            Prijavi se koristeći @provider.DisplayName
                        </button>
                    }
                </form>
            }
        }
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
