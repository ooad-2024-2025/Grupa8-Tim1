@model IEnumerable<OptiShape.Models.Placanje>

@{
    ViewData["Title"] = "Plaćanja";
}

<h1>Plaćanja</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Kreiraj novo</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.DatumPlacanja)</th>
                <th>@Html.DisplayNameFor(model => model.Iznos)</th>
                <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.PopustPrimijenjen)</th>
                <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.NacinPlacanja)</th>
                <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.Korisnik)</th>
                <th>Akcije</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.DatumPlacanja)</td>
                    <td>@Html.DisplayFor(modelItem => item.Iznos)</td>
                    <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.PopustPrimijenjen)</td>
                    <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.NacinPlacanja)</td>
                    <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.Korisnik.IdKorisnika)</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.IdPlacanja" class="btn btn-sm btn-outline-primary">Uredi</a>
                            <a asp-action="Details" asp-route-id="@item.IdPlacanja" class="btn btn-sm btn-outline-info">Detalji</a>
                            <a asp-action="Delete" asp-route-id="@item.IdPlacanja" class="btn btn-sm btn-outline-danger">Obriši</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>