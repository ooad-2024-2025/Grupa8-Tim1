@model IEnumerable<OptiShape.Models.PlanIshraneTreninga>

@{
    ViewData["Title"] = "Planovi ishrane i treninga";
}

<h1>Planovi ishrane i treninga</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Kreiraj novi</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.DatumKreiranja)</th>
                <th>@Html.DisplayNameFor(model => model.Kalorije)</th>
                <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.Protein)</th>
                <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.Ugljikohidrati)</th>
                <th class="d-none d-lg-table-cell">@Html.DisplayNameFor(model => model.Masti)</th>
                <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.Korisnik)</th>
                <th>Akcije</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.DatumKreiranja)</td>
                    <td>@Html.DisplayFor(modelItem => item.Kalorije)</td>
                    <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.Protein)</td>
                    <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.Ugljikohidrati)</td>
                    <td class="d-none d-lg-table-cell">@Html.DisplayFor(modelItem => item.Masti)</td>
                    <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.Korisnik.IdKorisnika)</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.IdPlana" class="btn btn-sm btn-outline-primary">Uredi</a>
                            <a asp-action="Details" asp-route-id="@item.IdPlana" class="btn btn-sm btn-outline-info">Detalji</a>
                            <a asp-action="Delete" asp-route-id="@item.IdPlana" class="btn btn-sm btn-outline-danger">Obriši</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>