@model IEnumerable<OptiShape.Models.PlanIshraneTreninga>

@{
    ViewData["Title"] = "Planovi ishrane i treninga";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mx-auto" style="width: 95%;" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zatvori"></button>
    </div>
}


@section Styles {
    <style>
        .card-custom {
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.06);
            background-color: #ffffff;
            padding: 30px;
            margin: 20px auto;
            width: 95%;
        }

        .table th,
        .table td {
            vertical-align: middle;
        }

        .table-hover tbody tr:hover {
            background-color: #f1f5f9;
        }

        .btn-group .btn {
            border-radius: 8px;
            margin-right: 5px;
        }

        .page-title {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            margin: 30px auto;
            width: 95%;
        }

            .page-title h1 {
                font-size: 2rem;
                font-weight: 700;
                color: #1e3a8a;
            }

            .page-title .btn-primary {
                background-color: #2563eb;
                border: none;
            }

                .page-title .btn-primary:hover {
                    background-color: #1d4ed8;
                }
    </style>
}

<div class="page-title">
    <h1><i class="bi bi-list-check me-2"></i> Planovi ishrane i treninga</h1>
    <a asp-action="Create" class="btn btn-primary">+ Kreiraj novi plan</a>
</div>


<div class="card-custom">
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.DatumKreiranja)</th>
                    <th>@Html.DisplayNameFor(model => model.Kalorije)</th>
                    <th class="d-none d-md-table-cell">Proteini (g)</th>
                    <th class="d-none d-md-table-cell">Ugljikohidrati (g)</th>
                    <th class="d-none d-lg-table-cell">Masti (g)</th>
                    <th class="d-none d-md-table-cell">Ime korisnika</th>
                    <th>Akcije</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DatumKreiranja.ToShortDateString()</td>
                        <td>@item.Kalorije</td>
                        <td class="d-none d-md-table-cell">@item.Protein</td>
                        <td class="d-none d-md-table-cell">@item.Ugljikohidrati</td>
                        <td class="d-none d-lg-table-cell">@item.Masti</td>
                        <td class="d-none d-md-table-cell">@item.Korisnik?.Ime @item.Korisnik?.Prezime</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.IdPlana" class="btn btn-sm btn-outline-primary">Uredi</a>
                                <a asp-action="Details" asp-route-id="@item.IdPlana" class="btn btn-sm btn-outline-info">Detalji</a>
                                <a asp-action="Delete" asp-route-id="@item.IdPlana" class="btn btn-sm btn-outline-danger">Obriši</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
