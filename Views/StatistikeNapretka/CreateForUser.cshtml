@model OptiShape.Models.Placanje

@{
    ViewData["Title"] = "Izvršite plaćanje članarine";
}

@section Styles {
    <style>
        body {
            background-color: #f8fafc;
            font-family: 'Segoe UI', sans-serif;
        }

        .create-container {
            background-color: #ffffff;
            padding: 30px;
            margin: 40px auto;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
            max-width: 700px;
        }

        h2 {
            color: #1e3a8a;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: 600;
            color: #334155;
            display: block;
            margin-bottom: 8px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #cbd5e1;
            border-radius: 8px;
            font-size: 1rem;
        }

            .form-control:focus {
                border-color: #3b82f6;
                box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.25);
                outline: none;
            }

        .btn-group {
            margin-top: 30px;
            display: flex;
            gap: 10px;
        }

        .btn-primary, .btn-secondary {
            border: none;
            border-radius: 8px;
            font-weight: 600;
            padding: 12px 20px;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background-color: #2563eb;
            color: #ffffff;
        }

            .btn-primary:hover {
                background-color: #1d4ed8;
            }

        .btn-secondary {
            background-color: #e2e8f0;
            color: #1e293b;
        }

            .btn-secondary:hover {
                background-color: #cbd5e1;
            }

        .text-danger {
            color: #dc2626;
            font-size: 0.9rem;
            margin-top: 5px;
            display: block;
        }

        .info-box {
            background-color: #f0f9ff;
            border-left: 4px solid #3b82f6;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 0 8px 8px 0;
        }

        .membership-price {
            font-size: 1.5rem;
            font-weight: 700;
            color: @(ViewBag.IsStudent ? "#1d4ed8" : "#fb923c");
            margin-bottom: 10px;
            display: block;
            text-align: center;
        }

        .price-tag {
            margin-top: 15px;
            padding: 10px;
            background-color: @(ViewBag.IsStudent ? "#dbeafe" : "#fff7ed");
            border-radius: 8px;
            text-align: center;
        }

        .price-badge {
            display: inline-block;
            padding: 3px 8px;
            border-radius: 4px;
            font-size: 0.8rem;
            font-weight: 600;
            margin-top: 5px;
            background-color: @(ViewBag.IsStudent ? "#1d4ed8" : "#fb923c");
            color: white;
        }
    </style>
}

<div class="create-container">
    <h2>Izvršite plaćanje članarine</h2>

    <div class="info-box">
        <div class="price-tag">
            <span class="membership-price">@(ViewBag.IsStudent ? "7 KM" : "10 KM") mjesečno</span>
            @if (ViewBag.IsStudent)
            {
                <span class="price-badge">Studentski popust primijenjen</span>
            }
        </div>
    </div>

    <form asp-action="CreateForUser" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="DatumPlacanja" class="form-label">📅 Datum plaćanja</label>
            <input asp-for="DatumPlacanja" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="DatumPlacanja" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Iznos" class="form-label">💰 Iznos (KM)</label>
            <input asp-for="Iznos" class="form-control" value="@(ViewBag.IsStudent ? 7.00 : 10.00)" readonly />
            <span asp-validation-for="Iznos" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NacinPlacanja" class="form-label">💳 Način plaćanja</label>
            <select asp-for="NacinPlacanja" class="form-control">
                <option value="KARTICA">Kartica</option>
                <option value="GOTOVINA">Gotovina</option>
            </select>
            <span asp-validation-for="NacinPlacanja" class="text-danger"></span>
        </div>

        <div class="btn-group">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-cash-coin me-2"></i>
                Izvrši plaćanje
            </button>
            <a asp-controller="Home" asp-action="Dashboard" class="btn btn-secondary">
                Nazad na dashboard
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}