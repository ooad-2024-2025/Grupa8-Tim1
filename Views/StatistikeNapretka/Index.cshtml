@model IEnumerable<OptiShape.Models.StatistikeNapretka>

@{
    ViewData["Title"] = "Statistike napretka";
}

<h1>Statistike napretka</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Kreiraj novu</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Datum)</th>
                <th>@Html.DisplayNameFor(model => model.Tezina)</th>
                <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.Bmi)</th>
                <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.KalorijskiUnos)</th>
                <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.Korisnik)</th>
                <th>Akcije</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Datum)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tezina)</td>
                    <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.Bmi)</td>
                    <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.KalorijskiUnos)</td>
                    <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.Korisnik.IdKorisnika)</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.IdZapisa" class="btn btn-sm btn-outline-primary">Uredi</a>
                            <a asp-action="Details" asp-route-id="@item.IdZapisa" class="btn btn-sm btn-outline-info">Detalji</a>
                            <a asp-action="Delete" asp-route-id="@item.IdZapisa" class="btn btn-sm btn-outline-danger">Obriši</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>