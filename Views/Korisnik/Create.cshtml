@model OptiShape.Models.Korisnik

@{
    ViewData["Title"] = "Kreiraj korisnika";
}

<h1>Kreiraj korisnika</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Prezime" class="control-label"></label>
                <input asp-for="Prezime" class="form-control" />
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sifra" class="control-label"></label>
                <input asp-for="Sifra" class="form-control" type="password" />
                <span asp-validation-for="Sifra" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DatumRodjenja" class="control-label"></label>
                <input asp-for="DatumRodjenja" class="form-control" type="date" />
                <span asp-validation-for="DatumRodjenja" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Visina" class="control-label"></label>
                <input asp-for="Visina" class="form-control" />
                <span asp-validation-for="Visina" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tezina" class="control-label"></label>
                <input asp-for="Tezina" class="form-control" />
                <span asp-validation-for="Tezina" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Spol" class="control-label"></label>
                <select asp-for="Spol" class="form-control" asp-items="Html.GetEnumSelectList<OptiShape.Models.Spol>()"></select>
                <span asp-validation-for="Spol" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cilj" class="control-label"></label>
                <select asp-for="Cilj" class="form-control" asp-items="Html.GetEnumSelectList<OptiShape.Models.Cilj>()"></select>
                <span asp-validation-for="Cilj" class="text-danger"></span>
            </div>

            <div class="form-group form-check mt-3 mb-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="StudentskiStatus" />
                    @Html.DisplayNameFor(model => model.StudentskiStatus)
                </label>
            </div>

            <div class="form-group">
                <label asp-for="BrojTelefona" class="control-label"></label>
                <input asp-for="BrojTelefona" class="form-control" />
                <span asp-validation-for="BrojTelefona" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Sačuvaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-link">&larr; Nazad na listu</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
