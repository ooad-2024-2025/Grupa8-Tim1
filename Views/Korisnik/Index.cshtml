@model IEnumerable<OptiShape.Models.Korisnik>

@{
    ViewData["Title"] = "Korisnici";
}

<h1>Korisnici</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Kreiraj novog</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Ime)</th>
                <th>@Html.DisplayNameFor(model => model.Prezime)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.DatumRodjenja)</th>
                <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.Visina)</th>
                <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.Tezina)</th>
                <th class="d-none d-lg-table-cell">@Html.DisplayNameFor(model => model.Spol)</th>
                <th class="d-none d-lg-table-cell">@Html.DisplayNameFor(model => model.Cilj)</th>
                <th class="d-none d-lg-table-cell">@Html.DisplayNameFor(model => model.StudentskiStatus)</th>
                <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.BrojTelefona)</th>
                <th>Akcije</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Ime)</td>
                    <td>@Html.DisplayFor(modelItem => item.Prezime)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.DatumRodjenja)</td>
                    <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.Visina)</td>
                    <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.Tezina)</td>
                    <td class="d-none d-lg-table-cell">@Html.DisplayFor(modelItem => item.Spol)</td>
                    <td class="d-none d-lg-table-cell">@Html.DisplayFor(modelItem => item.Cilj)</td>
                    <td class="d-none d-lg-table-cell">@Html.DisplayFor(modelItem => item.StudentskiStatus)</td>
                    <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.BrojTelefona)</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.IdKorisnika" class="btn btn-sm btn-outline-primary">Uredi</a>
                            <a asp-action="Details" asp-route-id="@item.IdKorisnika" class="btn btn-sm btn-outline-info">Detalji</a>
                            <a asp-action="Delete" asp-route-id="@item.IdKorisnika" class="btn btn-sm btn-outline-danger">Obriši</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>