    ViewData["Title"] = "Početna";
    ViewData["FixedNavbar"] = true;
}

<section style="
    background-image: url('/images/slika1.png');
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    height: 900px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 80px 20px 0;
    color: white;
    position: relative;
    overflow: hidden;
">

    <div class="fade-in" style="max-width: 800px; margin-top: -100px;">

        <h1 style="font-size: 4rem; font-weight: 800; margin-bottom: 20px;">
            <span style="color:white">Dobrodošli na </span> <span style="color:#60a5fa;">OptiShape!</span>
        </h1>
        <p style="font-size: 1.2rem; margin-bottom: 30px;">
            OptiShape je vaš pametni partner za ostvarenje zdravstvenih i fitness ciljeva. <br />
            Povezujemo lične podatke sa stručnim smjernicama kako biste donosili bolje odluke – svaki dan.
        </p>
        <a href="javascript:void(0)" class="btn btn-primary" onclick="prikaziSadrzaj()" style="
